{
  "manifest_version": 2,
  "name": "YouTube Already Watched",
  "version": "1.1",
  "description": "Adds 'already watched' and video summary buttons to YouTube video thumbnails",

  "applications": {
    "gecko": {
      "id": "youtube-already-watched@roboalchemist.github.io"
    }
  },

  "permissions": [
    "https://www.youtube.com/*",
    "https://youtube.com/*",
    "https://openrouter.ai/*",
    "storage"
  ],

  "browser_action": {
    "default_title": "YouTube Already Watched Settings",
    "default_popup": "popup.html"
  },

  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },

  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*",
        "https://youtube.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ]
}
